{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "name": "lesson"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "published": {
      "type": "boolean"
    },
    "video": {
      "type": "string"
    },
    "number": {
      "type": "integer"
    },
    "cover": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "exercises": {
      "collection": "exercise",
      "via": "lesson"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "materials": {
      "collection": "material",
      "via": "lesson"
    },
    "private": {
      "type": "boolean",
      "default": true
    }
  }
}
