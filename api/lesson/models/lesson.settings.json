{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "name": "lesson"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "published": {
      "type": "boolean"
    },
    "video": {
      "type": "string"
    },
    "number": {
      "type": "integer"
    },
    "cover": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "exercises": {
      "via": "lesson",
      "collection": "exercise"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "materials": {
      "via": "lesson",
      "collection": "material"
    },
    "private": {
      "type": "boolean",
      "default": true
    },
    "playlists": {
      "collection": "playlist",
      "via": "lessons"
    },
    "videoLength": {
      "type": "integer"
    }
  }
}
